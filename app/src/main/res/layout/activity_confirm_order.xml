<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wooden"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:weightSum="1"
    android:gravity="center"
    tools:context="com.example.ryanj11_tech.appetite.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Order"
        android:layout_gravity="center_horizontal|top"
        android:textAppearance="?android:textAppearanceLarge"
        android:textStyle="bold"
        android:layout_marginTop="10dp" />



    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="454dp"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_weight="0.47"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buger and Fries"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:background="#f70b0b"
            android:textStyle="bold"

            android:layout_gravity="right"
            android:id="@+id/textView8"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="31dp"
            android:layout_marginEnd="31dp"
            android:layout_marginTop="35dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove"
            android:background="#f70b0b"
            android:textStyle="bold"

            android:layout_below="@+id/textView8"
            android:layout_alignLeft="@+id/textView8"
            android:layout_alignStart="@+id/textView8"
            android:id="@+id/btnRemove1" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_alignTop="@+id/textView8"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/imageView4" />

        //second image/text/button
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spaghetti"
            android:layout_gravity="right"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:background="#f70b0b"
            android:textStyle="bold"

            android:layout_marginTop="54dp"
            android:layout_below="@+id/imageView4"
            android:layout_alignLeft="@+id/btnRemove1"
            android:layout_alignStart="@+id/btnRemove1"
            android:id="@+id/textView9" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove"
            android:id="@+id/btnRemove2"
            android:background="#f70b0b"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/textView9"
            android:layout_alignStart="@+id/textView9" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_alignTop="@+id/textView9"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/imageView5" />


        //thrid image/text/button
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BBQ ribs and Fries"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:background="#f70b0b"
            android:textStyle="bold"
            android:layout_below="@+id/imageView5"
            android:layout_alignLeft="@+id/btnRemove2"
            android:layout_alignStart="@+id/btnRemove2"
            android:layout_marginTop="65dp"
            android:id="@+id/textView10" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove"
            android:id="@+id/btnRemove3"
            android:background="#f70b0b"
            android:textStyle="bold"
            android:layout_below="@+id/textView10"
            android:layout_alignLeft="@+id/textView10"
            android:layout_alignStart="@+id/textView10" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_alignTop="@+id/textView10"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="Order Food"
        android:id="@+id/oder"
        android:background="#f70b0b"
        android:layout_gravity="center_horizontal" />


</LinearLayout>
